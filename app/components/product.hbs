

<a href="#" class="group rounded-lg  shadow-sm overflow-hidden">
  <div class="">
<Product::Image  src={{@product.pic}} width="100%"
                 alt="A picture of {{@product.name}}"/>
  </div>
  <div class="flex p-4 justify-between  content-end">
    <div>
  <h3 class="mt-4 text-xl font-bold text-gray-700">{{@product.name}}</h3>
  <p class="mt-1 text-lg font-medium text-gray-900">${{@product.price}}</p></div>
  <div class="sm:ml-3 grid content-end">
    {{#if this.quantity}}
    {{!-- not in cart--}}
    <div  class="w-28  flex justify-between items-center rounded-md bg-violet-100 px-3 py-2 font-bold  shadow-sm hover:bg-indigo-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600">
      {{#if this.one}}
      {{!-- only one in cart--}}
       <svg {{on "click" this.removeFromCart }} width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
          <path d="M14.7404 9L14.3942 18M9.60577 18L9.25962 9M19.2276 5.79057C19.5696 5.84221 19.9104 5.89747 20.25 5.95629M19.2276 5.79057L18.1598 19.6726C18.0696 20.8448 17.0921 21.75 15.9164 21.75H8.08357C6.90786 21.75 5.93037 20.8448 5.8402 19.6726L4.77235 5.79057M19.2276 5.79057C18.0812 5.61744 16.9215 5.48485 15.75 5.39432M3.75 5.95629C4.08957 5.89747 4.43037 5.84221 4.77235 5.79057M4.77235 5.79057C5.91878 5.61744 7.07849 5.48485 8.25 5.39432M15.75 5.39432V4.47819C15.75 3.29882 14.8393 2.31423 13.6606 2.27652C13.1092 2.25889 12.5556 2.25 12 2.25C11.4444 2.25 10.8908 2.25889 10.3394 2.27652C9.16065 2.31423 8.25 3.29882 8.25 4.47819V5.39432M15.75 5.39432C14.5126 5.2987 13.262 5.25 12 5.25C10.738 5.25 9.48744 5.2987 8.25 5.39432" stroke="#6D28D9" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"/>
        </svg>
      {{else}}
        <svg {{on "click" this.removeFromCart }} width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
          <path d="M5 12H19" stroke="#6D28D9" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"/>
          </svg>
      {{/if}}
       <span>{{ this.quantity}}</span>
        <svg {{on "click" this.addToCart }} width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
          <path d="M12 4.5V19.5M19.5 12L4.5 12" stroke="#6D28D9" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"/>
        </svg>
    </div>
    {{else}}
    {{!-- has some amount in cart --}}

      <div {{on "click" this.addToCart }} class="w-28  flex items-center rounded-md bg-violet-100 px-3 py-2 font-semibold  shadow-sm hover:bg-indigo-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600">
        Add to Cart

      </div>
    {{/if}}

    </div></div>
</a>